  "keywords": [
    "btc",
    "bitcoin",
    "segwit",
    "crypto",
    "address",
    "rsk",
    "peg-in"
  ],
  "version": "0.3.0",
  "license": "MIT",
  "main": "src/pegin-address-verifier",
  "scripts": {
